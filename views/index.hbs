<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <meta name="description" content="Simple Weather Finder App using express.js and handlebars" />
  <meta name="author" content="Tri Rizeki Rifandani" />
  <title>Weather Finder | Home</title>
  <!-- Bootstrap core CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/about">About</a>
        </li>
      </ul>
    </div>
  </nav>
  <!-- Page Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center main">
        <div>
          <h1 class="mt-5">Weather Finder</h1>
          <p class="lead">Enter the name of the city and press search!</p>
        </div>
        <div>
          <form action="/" method="post">
            <input name="city" type="text" />
            <button class="btn-primary">Search!</button>
          </form>

          {{#if err}}
          <div class="alert alert-danger mt-3" role="alert">
            <h4 class="alert-heading">{{err}}</h4>
          </div>
          {{/if}}

          {{#if error}}
          <div class="alert alert-danger mt-3" role="alert">
            <h4 class="alert-heading">{{error}}</h4>
          </div>
          {{/if}}

          <div class="container mt-3">
            <div class="card-deck">
              <div class="card">
                {{!-- <img src="..." class="card-img-top" alt="..."> --}}
                <div class="card-body">
                  <h5 class="card-title">Temperature</h5>
                  <p class="card-text">Temperature = {{ temp }} Celcius</p>
                </div>
                <div class="card-footer">
                  <small class="text-muted">{{ name }}</small>
                </div>
              </div>

              <div class="card">
                <div class="card-body">
                  <h5 class="card-title">Pressure</h5>
                  <p class="card-text">Tekanan = {{ pressure }} hPa</p>
                </div>
                <div class="card-footer">
                  <small class="text-muted">{{ name }}</small>
                </div>
              </div>
            </div>

            <div class="card-deck mt-3">
              <div class="card">
                {{!-- <img src="..." class="card-img-top" alt="..."> --}}
                <div class="card-body">
                  <h5 class="card-title">Humidity</h5>
                  <p class="card-text">Kelembaban = {{ humidity }} %</p>
                </div>
                <div class="card-footer">
                  <small class="text-muted">{{ name }}</small>
                </div>
              </div>
              <div class="card">
                {{!-- <img src="..." class="card-img-top" alt="..."> --}}
                <div class="card-body">
                  <h5 class="card-title">Wind Speed</h5>
                  <p class="card-text">Kecepatan angin = {{ speed }} m/s</p>
                </div>
                <div class="card-footer">
                  <small class="text-muted">{{ name }}</small>
                </div>
              </div>
              <div class="card">
                {{!-- <img src="..." class="card-img-top" alt="..."> --}}
                <div class="card-body">
                  <h5 class="card-title">Wind Direction</h5>
                  <p class="card-text">Arah angin = {{ deg }} derajat</p>
                </div>
                <div class="card-footer">
                  <small class="text-muted">{{ name }}</small>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</body>

</html>